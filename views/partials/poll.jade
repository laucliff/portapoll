h2(class='title') {{poll.name}} {{poll._id}}

div(ng-show='hasVoted') This guy has already voted.

div(ng-repeat='option in poll.pollOptions' class='option row')
  div(class='col-md-10 detail')
    {{$index+1}}: {{option.name}} {{option.votes}}
  a(href='' class='col-md-2 vote' ng-click='vote($index)') vote
