//= require lib/bootstrap.min

@import colours

html, body
  height: 100%

border-radius = 5px

.container
  background-color: lightblue
  border-radius: border-radius

[class*="col-"]
  padding-left: 20px
  padding-right: 20px
  padding-top: 15px
  padding-bottom: 15px

a.button
  text-align: center
  text-decoration: none

.title
  text-align: center

.header
  padding: 15px

.body
  padding: 15px

.footer
  padding: 15px

  .button
    color: white
    background-color: gray
    border-radius: border-radius
    font-size: 20px
    padding: 10px 10px
    margin: 0 15px

  .button:nth-child(odd)
    background-color: salmon


.option
  &:nth-child(even)
    stripe(evenColours)

  &:nth-child(odd)
    stripe(oddColours)

.option
  font-size: 25px

  input[type="text"]
    background: transparent
    border: none

input[type="text"].title
  font-size: 25px
  width: 100%
  background: transparent
  border: none