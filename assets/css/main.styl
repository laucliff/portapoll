//= require lib/bootstrap.min

html, body
  height: 100%

border-radius = 15px

.container
  background-color: lightblue
  border-radius: border-radius

[class*="col-"]
  padding-left: 20px
  padding-right: 20px
  padding-top: 15px
  padding-bottom: 15px

a.button
  text-align: center
  text-decoration: none

.title
  text-align: center

.header
  padding: border-radius

.footer
  padding: border-radius

  .button
    color: white
    background-color: gray
    border-radius: border-radius
    font-size: 20px
    padding: 10px 10px
    margin: 0 15px

  .button:nth-child(odd)
    background-color: salmon

evenColours = {
  vote: {
    base: blue
    hover: darkblue
    active: navy
  }
}

oddColours = {
  base: lightgray
  vote: {
    base: gray
    hover: lightgray
    active: darkgray
  }
}

buttonColour(colours)
  background-color: colours.base
  color: white

  &:hover
    background-color: colours.hover
  &:active
    background-color: colours.active

stripe(colours)
  if colours.base
    background-color: colours.base
  .button
    buttonColour(colours.vote)

.option
  &:nth-child(even)
    stripe(evenColours)

  &:nth-child(odd)
    stripe(oddColours)

.option
  font-size: 25px

input[type="text"].title
  font-size: 25px
  width: 100%